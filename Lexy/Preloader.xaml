<Window x:Class="SixPackApps.Lexy.Preloader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preloader" Height="158.209" Width="300" 
        AllowsTransparency="True" Background="Black" WindowStyle="None" 
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="Label" BasedOn="{StaticResource PageHeaderLabelStyle}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </Window.Resources>
    <StackPanel Margin="20" HorizontalAlignment="Center">
        <Label HorizontalAlignment="Center" FontSize="48">Lexy</Label>
        <Label FontSize="20">loading...</Label>
    </StackPanel>
</Window>
